<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="1/x"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_procent" android:background="#FFEB3B"
            app:layout_constraintEnd_toStartOf="@+id/button_div"
            android:layout_marginEnd="31dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button_3" android:onClick="pressButtonProc"/>
    <Button
            android:text="4"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_4" android:background="@drawable/buttons"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/button_7" app:layout_constraintEnd_toStartOf="@+id/button_5"
            android:layout_marginEnd="35dp" android:onClick="pressButton4"/>
    <Button
            android:text="="
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:id="@+id/button_eq"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:onClick="pressEqual"/>
    <Button
            android:text="."
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_point" android:background="@drawable/buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toStartOf="@+id/button_eq"
            android:layout_marginEnd="40dp" android:onClick="pressButtonPoint"/>
    <Button
            android:text="0"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_0" android:background="@drawable/buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp" app:layout_constraintEnd_toStartOf="@+id/button_point"
            android:layout_marginEnd="37dp" android:onClick="pressButton0"/>
    <Button
            android:text="-"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:id="@+id/button_min"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_eq" android:onClick="pressMinus"/>
    <Button
            android:text="+"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:id="@+id/button_plus"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/button_min" android:onClick="pressPlus"/>
    <Button
            android:text="X"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:id="@+id/button_umnoz"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button_plus" android:onClick="pressMulti"/>
    <Button
            android:text="/"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:background="#FFEB3B"
            android:id="@+id/button_div"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button_umnoz" android:onClick="pressDiv"/>
    <Button
            android:text="8"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_8" android:background="@drawable/buttons"
            app:layout_constraintEnd_toStartOf="@+id/button_9" android:layout_marginEnd="38dp"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/button_point"
            android:onClick="pressButton8"/>
    <Button
            android:text="7"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_7" android:background="@drawable/buttons"
            app:layout_constraintEnd_toStartOf="@+id/button_8" android:layout_marginEnd="35dp"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toTopOf="@+id/button_0"
            android:onClick="pressButton7"/>
    <Button
            android:text="6"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_6" android:background="@drawable/buttons"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/button_9" app:layout_constraintEnd_toStartOf="@+id/button_plus"
            android:layout_marginEnd="32dp" android:onClick="pressButton6"/>
    <Button
            android:text="5"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_5" android:background="@drawable/buttons"
            app:layout_constraintEnd_toStartOf="@+id/button_6"
            android:layout_marginEnd="38dp" android:layout_marginBottom="29dp"
            app:layout_constraintBottom_toTopOf="@+id/button_8" android:onClick="pressButton5"/>
    <Button
            android:text="3"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_3" android:background="@drawable/buttons"
            app:layout_constraintEnd_toStartOf="@+id/button_umnoz"
            android:layout_marginEnd="32dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/button_6" android:onClick="pressButton3"/>
    <Button
            android:text="2"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_2" android:background="@drawable/buttons"
            app:layout_constraintEnd_toStartOf="@+id/button_3"
            android:layout_marginEnd="36dp" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/button_5" android:onClick="pressButton2"/>
    <Button
            android:text="1"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_1" android:background="@drawable/buttons"
            android:onClick="pressButton1"
            app:layout_constraintEnd_toStartOf="@+id/button_2" android:layout_marginEnd="35dp"
            android:layout_marginBottom="27dp" app:layout_constraintBottom_toTopOf="@+id/button_4"/>
    <Button
            android:text="DEL"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_del" android:background="#FFEB3B"
            app:layout_constraintEnd_toStartOf="@+id/button_procent"
            android:layout_marginEnd="37dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/button_2" android:onClick="pressBack"/>
    <Button
            android:text="9"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_9" android:background="@drawable/buttons"
            app:layout_constraintEnd_toStartOf="@+id/button_min"
            android:layout_marginEnd="32dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_eq" android:onClick="pressButton9"/>
    <Button
            android:text="C"
            android:layout_width="150px"
            android:layout_height="wrap_content"
            android:id="@+id/button_c" android:background="#FFEB3B"
            app:layout_constraintEnd_toStartOf="@+id/button_del"
            android:layout_marginEnd="35dp" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/button_1" android:onClick="pressC"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/textView1" android:layout_marginEnd="80dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="116dp" android:textSize="24sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_marginEnd="80dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="192dp" android:textSize="30sp"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>